# Maintainer : Wabuo <spam.wabuo@googlemail.com>

pkgname=thea-the-awakening
pkgver=unsported_build_3
pkgrel=1
pkgdesc="A turn-based strategic survival game steeped in Slavic myth. -gratis unsuported linux build"
arch=('i686' 'x86_64')
url="http://steamcommunity.com/app/378720/discussions/0/490125737485986607"
license=('custom: commercial')
source=("https://onedrive.live.com/download?resid=D09AAF078EFDC73D!2983&authkey=!AGxe3W4ByFCzWfs&ithint=file%2czip"
        "https://raw.githubusercontent.com/Wabuo/PKGBUILD/master/thea-the-awakening/thea-the-awakening.desktop")
noextract=("download?resid=D09AAF078EFDC73D!2983&authkey=!AGxe3W4ByFCzWfs&ithint=file%2czip")
sha256sums=('SKIP' 'SKIP') #The devolopers don't provide any checksum!
makedepends=(unzip)
depends=()


prepare() {
  # extract the downloaded .zip file.
  unzip -o "download?resid=D09AAF078EFDC73D!2983&authkey=!AGxe3W4ByFCzWfs&ithint=file%2czip"
}


package() {
  install -d "${pkgdir}/opt/games/${pkgname}"
  install -d "${pkgdir}/usr/share/applications"

  install -m755 "${srcdir}/Thea.x86_64" "${pkgdir}/opt/games/${pkgname}"
  install -m644 "${srcdir}/${pkgname}.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"

  cp -a "Thea_Data" "${pkgdir}/opt/games/${pkgname}"

}

PKGEXT=.pkg.tar
